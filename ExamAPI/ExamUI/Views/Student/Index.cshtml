@model IEnumerable<ExamUI.Models.Student>
@{
    ViewBag.Title = "学生列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>学生列表</h2>
<p>
    @Html.ActionLink("添加新的学生","Create")
</p>
<table class="table">
    <tr>
        <td>@Html.DisplayNameFor(Model =>Model.StuName)</td>
        <td>@Html.DisplayNameFor(Model =>Model.StuLoginName)</td>
        <td>@Html.DisplayNameFor(Model => Model.StuLoginPwd)</td>
        <td>@Html.DisplayNameFor(Model => Model.StuSex)</td>
        <td>@Html.DisplayNameFor(Model => Model.StuPhone)</td>
        <td>@Html.DisplayNameFor(Model => Model.StuEmail)</td>
        <td>@Html.DisplayNameFor(Model => Model.StuGrade)</td>
    </tr>
    @foreach (var item in Model) { 
<tr>
    <td>@Html.DisplayFor(modelitem => item.StuName)</td>
    <td>@Html.DisplayFor(modelitem => item.StuLoginName)</td>
    <td>@Html.DisplayFor(modelitem => item.StuLoginPwd)</td>
    <td>@(item.StuSex?"男":"女")</td>
    <td>@Html.DisplayFor(modelitem => item.StuPhone)</td>
    <td>@Html.DisplayFor(modelitem => item.StuEmail)</td>
    <td>@Html.DisplayFor(modelitem => item.StuGrade)</td>
    <td>@Html.ActionLink("编辑", "Edit", new { id = item.StuID })</td>
    <td>@Html.ActionLink("详情", "Details", new { id = item.StuID })</td>
    <td>@Html.ActionLink("删除", "Delete", new { id = item.StuID })</td>
</tr>
    }
</table>