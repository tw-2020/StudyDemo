@model TourUI.Models.LineType
@{
    ViewData["Title"] = "创建线路页面";
}

<div class="card">
    <div class="card-header d-flex align-items-center">
        <h4>线路创建</h4>
    </div>
    <div class="card-body">
        <form asp-controller="LineType" asp-action="create" method="post">
            <div class="form-group">
                <label>旅游线路</label>
                <input type="text" name="TypeName" class="input-material">
            </div>
            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-primary">
            </div>
            <a href="/LineType/Index">返回线路列表</a>
        </form>
    </div>
</div>
